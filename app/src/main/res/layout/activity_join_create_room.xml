<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"


    tools:context=".join_create_room">

    <!--tytuł-->
    <TextView
        android:id="@+id/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zarządzanie pokojami"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="100sp"
        style="@style/TextAppearance.AppCompat.Headline"/>

    <ImageView
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="5sp"
        android:adjustViewBounds="true"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:scaleType="fitXY"
        android:src="@drawable/bckg1"
        android:id="@+id/tlo"/>
    <ImageView
        android:id="@+id/guzikBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="10sp"
        android:layout_marginLeft="10sp"
        android:adjustViewBounds="true"
        android:maxHeight="50dp"
        android:maxWidth="50dp"
        android:src="@drawable/back" />

    <ImageView
        android:id="@+id/guzikJoinRoom"
        android:src="@drawable/joinroom"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:textSize="20sp"
        android:layout_marginBottom="0dp"
        android:layout_below="@id/Title"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true" />
    <TextView
        android:id="@+id/JoinText"
        android:layout_below="@id/guzikJoinRoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dołącz do istniejącego pokoju"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:textSize="20sp"
        android:layout_marginBottom="40sp" />

    <ImageView
        android:id="@+id/guzikCreateRoom"
        android:src="@drawable/createroom"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/JoinText"
        android:layout_centerHorizontal="true"

        android:textSize="20sp" />
    <TextView
        android:id="@+id/CreateText"
        android:layout_below="@id/guzikCreateRoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stwórz pokój"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:layout_marginBottom="40sp" />


</RelativeLayout>
