<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"


    tools:context=".guestlist">

    <!--tytuł-->
    <TextView
        android:id="@+id/Tytul"
        android:layout_below="@id/hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Użytkownicy:"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5sp"
        style="@style/TextAppearance.AppCompat.Headline"/>
    <TextView
        android:id="@+id/hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wybierz użytkownika któremu chcesz przypisać zadanie"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5sp"
        android:textSize="20sp"
        />

    <ImageView
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="5sp"
        android:adjustViewBounds="true"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:scaleType="fitXY"
        android:id="@+id/tlo"
        android:src="@drawable/bckg1" />
    <ImageView
        android:id="@+id/guzikBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="10sp"
        android:layout_marginLeft="10sp"
        android:adjustViewBounds="true"
        android:maxHeight="50dp"
        android:maxWidth="50dp"
        android:src="@drawable/back" />
    <Button
        android:id="@+id/guzikCreateTask"
        android:layout_width="189dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tlo"
        android:layout_marginStart="51dp"
        android:layout_toEndOf="@+id/guzikBack"
        android:text="wybierz" />
    <LinearLayout
        android:id="@+id/guestlistlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/Tytul"
        android:orientation="vertical"

        tools:context=".guestlist">

    </LinearLayout>




</RelativeLayout>
