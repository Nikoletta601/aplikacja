<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20sp"
    tools:context=".Createroom">

    <!--tytuł-->
    <TextView
        android:id="@+id/RoomCreateTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tworzenie pokoju"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100sp"
        style="@style/TextAppearance.AppCompat.Headline"/>

    <!--nazwa-->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/roomNameTil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10sp"
        android:layout_below="@+id/RoomCreateTitle">
        <EditText
            android:id="@+id/roomNameEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nazwa pokoju"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/guzikCreateRoom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stwórz"
        android:layout_marginTop="30sp"
        android:layout_below="@id/roomNameTil"/>

    <Button
        android:id="@+id/guzikBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wróć"
        android:layout_marginTop="5sp"
        android:layout_below="@id/guzikCreateRoom"/>

</RelativeLayout>