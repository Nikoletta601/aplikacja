<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20sp"
    tools:context=".JoinRoom">

    <!--tytuł-->
    <TextView
        android:id="@+id/RoomJoinTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dołącz do pokoju"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100sp"
        style="@style/TextAppearance.AppCompat.Headline"/>
    <TextView
        android:layout_below="@+id/RoomJoinTitle"
        android:id="@+id/RoomJoinText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Podaj klucz pokoju do którego chcesz dołączyć:"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5sp"
        android:textSize="15sp"/>

    <!--nazwa-->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/roomJoinTil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10sp"
        android:layout_below="@+id/RoomJoinText">
        <EditText
            android:id="@+id/roomJoinEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Klucz pokoju"/>

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/guzikJoinRoom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dołącz"
        android:layout_marginTop="30sp"
        android:layout_below="@id/roomJoinTil"/>

    <Button
        android:id="@+id/guzikBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wróć"
        android:layout_marginTop="5sp"
        android:layout_below="@id/guzikJoinRoom"/>

</RelativeLayout>