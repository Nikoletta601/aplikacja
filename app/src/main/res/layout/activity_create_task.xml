<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20sp"
    tools:context=".Creattask">

    <!--tytul-->
    <TextView
        android:id="@+id/taskCreateTitle"
        style="@style/TextAppearance.AppCompat.Headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20sp"
        android:text="Nowe zadanie" />

    <TextView
        android:id="@+id/who"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/taskCreateTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100sp"
        android:text="dla kogo"
        android:textSize="15dp" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/taskNameTil"
        android:layout_width="378dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/taskCreateTitle"
        android:layout_marginTop="50dp">

        <EditText
            android:id="@+id/taskName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Treść zadania"
            android:inputType="text"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/taskpunk"
        android:layout_width="389dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/taskNameTil"
        android:layout_marginTop="20dp"
        android:inputMethod="number">
        <EditText
            android:id="@+id/taskpunkty"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Punkty"
            android:inputType="number" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tasktr"
        android:layout_width="389dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/taskpunk"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/tasktresc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Komentarz"
            android:inputType="textImeMultiLine" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/taskdate"
        android:layout_width="389dp"
        android:layout_height="60dp"
        android:layout_below="@+id/tasktr"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/grey"
        android:text="Data"
        android:textAlignment="textStart"
        android:textColor="@color/darkgrey"></Button>

    <Button
        android:id="@+id/tasktime"
        android:layout_width="389dp"
        android:layout_height="60dp"
        android:layout_below="@+id/taskdate"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/grey"
        android:text="Godzina"
        android:textAlignment="textStart"
        android:textColor="@color/darkgrey"></Button>


    <Button
        android:id="@+id/guzikBack"
        android:layout_width="134dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="160dp"
        android:text="Wróć" />

    <Button
        android:id="@+id/guzikCreateTask"
        android:layout_width="189dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="51dp"
        android:layout_marginTop="160dp"
        android:layout_toEndOf="@+id/guzikBack"
        android:text="Stwórz"
        app:backgroundTint="#76A678" />

</RelativeLayout>