<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"


    tools:context=".tasks">

    <!--tytuÅ‚-->
    <TextView
        android:id="@+id/TaskName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="task_name"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15sp"
        style="@style/TextAppearance.AppCompat.Headline"/>
    <TextView
        android:id="@+id/comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Komentarz: "
        android:layout_marginBottom="10sp"
        android:layout_marginLeft="15sp"
        android:textSize="20sp"
        android:layout_below="@id/deadline"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Punkty do zdobycia: 0"
        android:layout_marginBottom="10sp"
        android:layout_marginLeft="15sp"
        android:textSize="20sp"
        android:layout_below="@id/creator"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/deadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Termin wykonania: 00/00/0000 00:00:00"
        android:layout_marginBottom="10sp"
        android:layout_marginLeft="15sp"
        android:textSize="20sp"
        android:layout_below="@id/points"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/creator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Autor zadania:"
        android:layout_marginBottom="10sp"
        android:layout_marginLeft="15sp"
        android:textSize="20sp"
        android:layout_below="@id/TaskName"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/dlakogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dla: "
        android:layout_marginBottom="10sp"
        android:layout_marginLeft="15sp"
        android:textSize="20sp"
        android:layout_below="@id/comment"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/wykonane"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nie wykonane "
        android:layout_marginBottom="10sp"
        android:layout_marginLeft="15sp"
        android:textSize="20sp"
        android:layout_below="@id/dlakogo"
        android:textColor="@color/black"
        />

    <ImageView
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="5sp"
        android:adjustViewBounds="true"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:scaleType="fitXY"
        android:src="@drawable/bckg1" />
    <ImageView
        android:id="@+id/guzikBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="10sp"
        android:layout_marginLeft="10sp"
        android:adjustViewBounds="true"
        android:maxHeight="50dp"
        android:maxWidth="50dp"
        android:src="@drawable/back" />
    <Button
        android:id="@+id/guzikRaport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wykonane"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_marginTop="30dp"
        android:text="Zdaj raport" />

    <LinearLayout
        android:id="@+id/roomviewlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/RoomName"
        android:orientation="vertical"

        tools:context=".RoomView">

    </LinearLayout>




</RelativeLayout>
